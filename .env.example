# Server
PORT=8080
NODE_ENV=development
BASE_URL=http://localhost:8080

# Security
JWT_SECRET=change-me-to-a-random-string-in-production
ENCRYPTION_KEY=change-me-to-a-random-string-in-production
# Allowed CORS origins (comma-separated), use * for development only
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Upload Limits (bytes)
UPLOAD_MAX_BYTES=104857600

# Database
DB_DRIVER=sqlite
SQLITE_PATH=/config/mediaos.sqlite

# PostgreSQL (optional, when DB_DRIVER=postgres)
# DATABASE_URL=postgresql://user:password@localhost:5432/mediaos
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=mediaos
# POSTGRES_USER=mediaos
# POSTGRES_PASSWORD=changeme
# POSTGRES_POOL_MIN=2
# POSTGRES_POOL_MAX=10

# Redis (future use for job queue)
# REDIS_URL=redis://localhost:6379

# Libraries
LIBRARY_PATHS=/media/movies;/media/tv;/media/music

# Downloader choice: external|builtin_torrent|builtin_nzb
DOWNLOADER=external

# External downloaders (optional)
QBT_URL=http://qbittorrent:8080
QBT_USERNAME=admin
QBT_PASSWORD=adminadmin

SAB_URL=http://sabnzbd:8080
SAB_API_KEY=changeme

NZBGET_URL=http://nzbget:6789
NZBGET_USERNAME=nzbget
NZBGET_PASSWORD=tegbzn6789

# External Services
# TMDB API key for metadata fetching
# TMDB_API_KEY=your-api-key-here

# Plex integration (optional)
# PLEX_URL=http://localhost:32400
# PLEX_TOKEN=your-plex-token

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=MediaOS <noreply@mediaos.local>

# Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=info

# Artwork history
ART_HISTORY=10

# Anime profile
ENABLE_ANIME_PROFILE=false

# Feature Flags
# ENABLE_WORKERS=false
# ENABLE_INDEXERS=false
# ENABLE_SUBTITLES=false
