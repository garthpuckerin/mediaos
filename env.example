# MediaOS Environment Configuration

# Application
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Database
DATABASE_URL=sqlite:./config/mediaos.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/mediaos

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# External Services
# Plex Integration
PLEX_URL=
PLEX_TOKEN=

# Download Clients
QBITTORRENT_URL=http://localhost:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

SABNZBD_URL=http://localhost:8080
SABNZBD_API_KEY=

NZBGET_URL=http://localhost:6789
NZBGET_USERNAME=nzbget
NZBGET_PASSWORD=tegbzn6789

# Indexers
# Add your indexer API keys here
INDEXER_API_KEYS=

# Subtitle Providers
OPENSUBTITLES_USERNAME=
OPENSUBTITLES_PASSWORD=
OPENSUBTITLES_API_KEY=

# File Paths
MEDIA_ROOT=/media
CONFIG_ROOT=/config
DOWNLOADS_ROOT=/downloads
ARTIFACTS_ROOT=/config/artifacts

# Logging
LOG_LEVEL=info
LOG_FILE=./config/logs/mediaos.log

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_TELEMETRY=true
ENABLE_AUTO_UPDATES=true

# Development
DEBUG=mediaos:*
HOT_RELOAD=true
MOCK_EXTERNAL_SERVICES=false
