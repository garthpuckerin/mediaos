{
  "name": "mediaos",
  "private": true,
  "version": "0.1.0",
  "description": "Unified media management platform replacing the arr ecosystem",
  "keywords": [
    "media",
    "management",
    "arr",
    "sonarr",
    "radarr",
    "plex",
    "docker"
  ],
  "author": "MediaOS Team",
  "license": "MIT",
  "homepage": "https://github.com/mediaos/mediaos",
  "repository": {
    "type": "git",
    "url": "https://github.com/mediaos/mediaos.git"
  },
  "bugs": {
    "url": "https://github.com/mediaos/mediaos/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.0.0",
  "scripts": {
    "dev": "concurrently -n API,WEB -c blue,green \"npm run dev -w @mediaos/api\" \"npm run dev -w @mediaos/web\"",
    "build": "npm run build -w @mediaos/web && npm run build -w @mediaos/api && npm run build -w @mediaos/workers && npm run build -w @mediaos/adapters",
    "start": "node packages/api/dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "audit": "npm audit",
    "audit:ci": "npm audit --audit-level=critical",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "verify:filenames": "node scripts/verify-filenames.js",
    "clean": "rimraf packages/*/dist packages/*/node_modules node_modules",
    "prepare": "husky install",
    "db:migrate": "npm run db:migrate -w @mediaos/api",
    "db:seed": "npm run db:seed -w @mediaos/api",
    "docker:build": "docker build -t mediaos:latest .",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker compose up -d"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
